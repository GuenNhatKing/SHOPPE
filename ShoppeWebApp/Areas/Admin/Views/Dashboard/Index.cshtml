<style>
    .header-content {
        display: none; /* Ẩn phần header */
    }
    body {
        font-family: "Segoe UI", sans-serif;
        background-color: #f5f6f7;
        margin: 0;
        padding: 0;
    }

    .admin-navbar {
        background-color: #333;
        padding: 10px 20px;
    }

    .navbar-menu {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: space-around; /* Căn đều các mục */
        align-items: center; /* Căn giữa theo chiều dọc */
    }

    .navbar-menu li {
        display: inline;
    }

    .navbar-menu a {
        color: white;
        text-decoration: none;
        font-size: 25px;
        font-weight: bold;
        padding: 8px 12px;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .navbar-menu a:hover {
        background-color: #555;
    }

    .admin-dashboard {
        padding: 20px;
    }

    .dashboard-title {
        font-size: 68px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 10px;
        color: #333;
    }

    .dashboard-subtitle {
        font-size: 30px;
        text-align: center;
        margin-bottom: 30px;
        color: #666;
    }

    .dashboard-overview {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Mỗi hàng 2 ô */
        gap: 20px;
        margin-bottom: 40px;
        justify-content: center; /* Căn giữa các ô trong lưới */
    }

    .overview-card {
        background-color: #000; /* Nền đen */
        color: white; /* Chữ trắng */
        border-radius: 20px;
        padding: 50px; /* Tăng khoảng cách bên trong */
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 40%; /* Tăng chiều ngang */
        margin: 0 auto; /* Căn giữa mỗi ô */
    }

    .overview-card h3 {
        font-size: 24px; /* Tăng kích thước tiêu đề */
        margin-bottom: 15px;
    }

    .overview-number {
        font-size: 50px; /* Tăng kích thước số liệu */
        font-weight: bold;
    }
</style>