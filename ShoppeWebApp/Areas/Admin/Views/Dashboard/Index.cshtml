@using ShoppeWebApp.ViewModels.Admin
@model HomeViewModel

<head>
  <title>Admin Index</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container-fluid">
    <!-- Thanh ngang trên cùng -->
    <div class="row bg-dark text-white py-2 align-items-center">
        <div class="col-md-10">
            <h4 class="ms-3">Xin chào Quản trị viên</h4>
        </div>
        <div class="col-md-2 text-end">
            <form asp-area="" asp-controller="Home" asp-action="DangXuat" method="post">
                <button type="submit" class="btn btn-danger btn-sm me-3">Đăng xuất</button>
            </form>
        </div>
    </div>
    <hr class="my-0 border-light">

    <div class="row">
        <!-- Thanh chức năng bên trái -->
        <div class="col-md-2 bg-dark text-white vh-100">
            <h5 class="mt-3 ms-3">Chức năng</h5>
            <div class="d-flex flex-column align-items-start mt-4 px-3">
                <!-- Home -->
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                    <i class="fas fa-home"></i> Home
                </a>
                
                <!-- Quản lý người dùng -->
                <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                    <i class="fas fa-users"></i> Quản lý người dùng
                </a>
                
                
                <!-- Quản lý hóa đơn -->
                <a asp-area="Admin" asp-controller="Invoice" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                    <i class="fas fa-file-invoice"></i> Quản lý hóa đơn
                </a>
                
                
                <!-- Quản lý cửa hàng -->
                <a asp-area="Admin" asp-controller="Shop" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                    <i class="fas fa-store"></i> Quản lý cửa hàng
                </a>
                
                <!-- Thống kê doanh thu -->
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Statistics" class="btn btn-outline-light w-100 mb-3 text-start">
                    <i class="fas fa-chart-bar"></i> Thống kê doanh thu
                </a>
            </div>
        </div>

        <!-- Nội dung chính -->
        <div class="col-md-9">
            <div class="container mt-4">
                <div class="row g-4">
                    <!-- Hàng 1 -->
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3 card-large bg-lightblue">
                            <div class="card-body">
                                <h5 class="card-title text-primary fs-4">
                                    <i class="fas fa-user"></i> Khách hàng
                                </h5>
                                <p class="card-text fs-1 fw-bold">@Model.TotalUsers</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3 card-large bg-lightgreen">
                            <div class="card-body">
                                <h5 class="card-title text-success fs-4">
                                    <i class="fas fa-user-tie"></i> Người bán
                                </h5>
                                <p class="card-text fs-1 fw-bold">@Model.TotalSellers</p>
                            </div>
                        </div>
                    </div>

                    <!-- Hàng 2 -->
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3 card-large bg-lightyellow">
                            <div class="card-body">
                                <h5 class="card-title text-warning fs-4">
                                    <i class="fas fa-shopping-cart"></i> Đơn hàng
                                </h5>
                                <p class="card-text fs-1 fw-bold">@Model.TotalOrders</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3 card-large bg-lightred">
                            <div class="card-body">
                                <h5 class="card-title text-danger fs-4">
                                    <i class="fas fa-box"></i> Sản phẩm
                                </h5>
                                <p class="card-text fs-1 fw-bold">@Model.TotalProducts</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: "Segoe UI", sans-serif;
        background-color: #f5f6f7;
        margin: 0;
        padding: 0;
    }

    .bg-lightblue {
        background-color: #cce5ff; /* Màu xanh nhạt */
    }
    .bg-lightgreen {
        background-color: #d4edda; /* Màu xanh lá nhạt */
    }
    .bg-lightyellow {
        background-color: #fff3cd; /* Màu vàng nhạt */
    }
    .bg-lightred {
        background-color: #f8d7da; /* Màu đỏ nhạt */
    }
    .card-large {
        height: 200px; /* Chiều cao cố định */
    }
    .card-large .card-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .btn-outline-light {
        font-size: 16px;
        font-weight: bold;
        text-align: left;
    }
    .btn-outline-light i {
        margin-right: 10px;
    }
</style>

