@model ShoppeWebApp.ViewModels.Admin.EditAccountViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Chỉnh sửa tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <!-- Thanh ngang trên cùng -->
        <div class="row bg-dark text-white py-2 align-items-center">
            <div class="col-md-10">
                <h4 class="ms-3">Xin chào Quản trị viên</h4>
            </div>
            <div class="col-md-2 text-end">
                <form asp-area="" asp-controller="Home" asp-action="DangXuat" method="post">
                    <button type="submit" class="btn btn-danger btn-sm me-3">Đăng xuất</button>
                </form>
            </div>
        </div>
        <hr class="my-0 border-light">

        <div class="row">
            <!-- Thanh chức năng bên trái -->
            <div class="col-md-2 bg-dark text-white vh-100">
                <h5 class="mt-3 ms-3">Chức năng</h5>
                <div class="d-flex flex-column align-items-start mt-4 px-3">
                    <!-- Home -->
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-home"></i> Home
                    </a>
                    
                    <!-- Quản lý người dùng -->
                    <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-users"></i> Quản lý người dùng
                    </a>

                    <!-- Quản lý cửa hàng -->
                    <a asp-area="Admin" asp-controller="Shop" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-store"></i> Quản lý cửa hàng
                    </a>
                    
                    <!-- Quản lý hóa đơn -->
                    <a asp-area="Admin" asp-controller="Invoice" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-file-invoice"></i> Quản lý hóa đơn
                    </a>
                    
                    <!-- Thống kê doanh thu -->
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Statistics" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-chart-bar"></i> Thống kê doanh thu
                    </a>
                </div>
            </div>

            <!-- Nội dung chỉnh sửa tài khoản -->
            <div class="col-md-10">
                <div class="container mt-5">
                    <!-- Tiêu đề -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-white p-3" style="background-color: #28a745; border-radius: 10px;">
                            Chỉnh sửa tài khoản
                        </h2>
                    </div>

                    <!-- Hiển thị thông báo thành công -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
            
                    <!-- Form chỉnh sửa tài khoản -->
                    <div class="p-4 border border-success rounded" style="background-color: #fdfdfd;">
                        <form asp-area="Admin" asp-controller="Account" asp-action="Edit" method="post" enctype="multipart/form-data">
                            <!-- Hiển thị lỗi tổng quát -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
                            <div class="row">
                                <!-- Cột bên trái: Ảnh đại diện -->
                                <div class="col-md-4 text-center">
                                    <label class="form-label fw-bold">Ảnh đại diện</label>
                                    <div>
                                        <img src="@Model.AvatarUrl" alt="Avatar" class="img-thumbnail mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                                    </div>
                                    <input type="file" class="form-control" id="Avatar" name="Avatar" />
                                </div>
            
                                <!-- Cột bên phải: Các trường thông tin -->
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <label for="Id" class="form-label fw-bold">ID Người dùng</label>
                                        <input type="text" class="form-control" id="Id" name="Id" value="@Model.Id" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                                        <small class="text-muted">Trường này chỉ đọc và không thể chỉnh sửa</small>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Username" class="form-label fw-bold">Tên đăng nhập</label>
                                        <input type="text" class="form-control" id="Username" name="Username" value="@Model.Username" placeholder="Nhập tên đăng nhập" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Name" class="form-label fw-bold">Tên người dùng</label>
                                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Nhập tên người dùng" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Email" class="form-label fw-bold">Email</label>
                                        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" placeholder="Nhập email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Cccd" class="form-label fw-bold">CCCD</label>
                                        <input type="text" class="form-control" id="Cccd" name="Cccd" value="@Model.Cccd" placeholder="Nhập CCCD" />
                                        <span asp-validation-for="Cccd" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
            
                            <hr />
            
                            <!-- Các trường bên dưới -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="Sdt" class="form-label fw-bold">Số điện thoại</label>
                                        <input type="text" class="form-control" id="Sdt" name="Sdt" value="@Model.Sdt" placeholder="Nhập số điện thoại" />
                                        <span asp-validation-for="Sdt" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="Address" class="form-label fw-bold">Địa chỉ</label>
                                        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" placeholder="Nhập địa chỉ" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
            
                            <div class="mb-3">
                                <label for="Role" class="form-label fw-bold">Vai trò</label>
                                <select class="form-select" id="Role" name="Role">
                                    <option value="1" selected="@(Model.Role == 1)">Khách hàng</option>
                                    <option value="2" selected="@(Model.Role == 2)">Chủ Shop</option>
                                    <option value="0" selected="@(Model.Role == 0)">Admin</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="Password" class="form-label fw-bold">Mật khẩu</label>
                                        <input type="password" class="form-control" id="Password" name="Password" placeholder="Nhập mật khẩu mới" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="ConfirmPassword" class="form-label fw-bold">Xác nhận mật khẩu</label>
                                        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Nhập lại mật khẩu" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
            
                            <!-- Nút hành động -->
                            <div class="text-end">
                                <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                                <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-secondary">Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<!-- Thêm Font Awesome -->
