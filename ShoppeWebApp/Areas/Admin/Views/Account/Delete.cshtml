@model ShoppeWebApp.ViewModels.Admin.UserViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Xác nhận xóa tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <!-- Tiêu đề -->
        <div class="text-center mb-4">
            <h2 class="fw-bold text-white p-3" style="background-color: #dc3545; border-radius: 10px;">
                Xác nhận xóa tài khoản
            </h2>
        </div>

        <!-- Hiển thị thông báo lỗi hoặc cảnh báo -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (ViewBag.WarningMessage != null)
        {
            <div class="alert alert-warning text-center" role="alert">
                @ViewBag.WarningMessage
            </div>
        }

        <!-- Thông tin tài khoản -->
        <div class="p-4 border border-danger rounded" style="background-color: #fdfdfd;">
            <div class="row mb-3">
                <div class="col-md-4 text-center">
                    <label class="form-label fw-bold">Ảnh đại diện</label>
                    <div>
                        <img src="@Model.AvatarUrl" alt="Avatar" class="img-thumbnail mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label fw-bold">ID Người dùng</label>
                        <input type="text" class="form-control" value="@Model.Id" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên người dùng</label>
                        <input type="text" class="form-control" value="@Model.Name" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" value="@Model.Email" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">CCCD</label>
                        <input type="text" class="form-control" value="@Model.Cccd" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Số điện thoại</label>
                        <input type="text" class="form-control" value="@Model.PhoneNumber" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Địa chỉ</label>
                        <input type="text" class="form-control" value="@Model.Address" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Vai trò</label>
                        <input type="text" class="form-control" value="@Model.Role" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                </div>
            </div>

            <!-- Nút xác nhận và hủy -->
            <div class="text-end">
                <form asp-area="Admin" asp-controller="Account" asp-action="DeleteConfirmed" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                </form>
                <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </div>
    </div>
</body>
</html>