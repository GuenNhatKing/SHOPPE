@model ShoppeWebApp.ViewModels.Admin.CreateAccountViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Thêm tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <!-- Tiêu đề -->
        <div class="text-center mb-4">
            <h2 class="fw-bold text-white p-3" style="background-color: #28a745; border-radius: 10px;">
                Thêm tài khoản
            </h2>
        </div>

        <!-- Form thêm tài khoản -->
        <div class="p-4 border border-success rounded" style="background-color: #fdfdfd;">
            <form asp-area="Admin" asp-controller="Account" asp-action="Create" method="post">
                <!-- Hiển thị lỗi tổng quát -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label for="Name" class="form-label fw-bold">Tên người dùng</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Nhập tên người dùng" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="UserName" class="form-label fw-bold">Tên tài khoản</label>
                    <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Nhập tên tài khoản" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Nhập email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Cccd" class="form-label fw-bold">CCCD</label>
                    <input type="text" class="form-control" id="Cccd" name="Cccd" placeholder="Nhập CCCD" />
                    <span asp-validation-for="Cccd" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Sdt" class="form-label fw-bold">SĐT</label>
                    <input type="text" class="form-control" id="Sdt" name="Sdt" placeholder="Nhập SĐT" />
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label fw-bold">Địa chỉ</label>
                    <input type="text" class="form-control" id="Address" name="Address" placeholder="Nhập địa chỉ" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Role" class="form-label fw-bold">Vai trò</label>
                    <select class="form-select" id="Role" name="Role">
                        <option value="1">Khách hàng</option>
                        <option value="2">Chủ Shop</option>
                        <option value="0">Admin</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label fw-bold">Mật khẩu</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label fw-bold">Xác nhận mật khẩu</label>
                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Nhập lại mật khẩu" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-success">Thêm tài khoản</button>
                    <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>