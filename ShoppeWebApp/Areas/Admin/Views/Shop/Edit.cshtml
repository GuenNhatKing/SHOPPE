@model ShoppeWebApp.ViewModels.Admin.EditShopViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Chỉnh sửa cửa hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <!-- Thanh ngang trên cùng -->
        <div class="row bg-dark text-white py-2 align-items-center">
            <div class="col-md-10">
                <h4 class="ms-3">Xin chào Quản trị viên</h4>
            </div>
            <div class="col-md-2 text-end">
                <form asp-area="" asp-controller="Home" asp-action="DangXuat" method="post">
                    <button type="submit" class="btn btn-danger btn-sm me-3">Đăng xuất</button>
                </form>
            </div>
        </div>
        <hr class="my-0 border-light">

        <div class="row">
            <!-- Thanh chức năng bên trái -->
            <div class="col-md-2 bg-dark text-white vh-100">
                <h5 class="mt-3 ms-3">Chức năng</h5>
                <div class="d-flex flex-column align-items-start mt-4 px-3">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-home"></i> Home
                    </a>
                    <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-users"></i> Quản lý người dùng
                    </a>
                    <a asp-area="Admin" asp-controller="Shop" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-store"></i> Quản lý cửa hàng
                    </a>
                    <a asp-area="Admin" asp-controller="Invoice" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-file-invoice"></i> Quản lý hóa đơn
                    </a>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Statistics" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-chart-bar"></i> Thống kê doanh thu
                    </a>
                </div>
            </div>

            <!-- Nội dung chỉnh sửa cửa hàng -->
            <div class="col-md-10">
                <div class="container mt-5">
                    <!-- Tiêu đề -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-white p-3" style="background-color: #ffc107; border-radius: 10px;">
                            Chỉnh sửa cửa hàng
                        </h2>
                    </div>

                    <!-- Hiển thị thông báo thành công -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Form chỉnh sửa cửa hàng -->
                    <div class="p-4 border border-warning rounded" style="background-color: #fdfdfd;">
                        <form asp-area="Admin" asp-controller="Shop" asp-action="Edit" method="post" enctype="multipart/form-data">
                            <!-- Hiển thị lỗi tổng quát -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row">
                                <!-- Cột bên trái: Ảnh cửa hàng -->
                                <div class="col-md-4 text-center">
                                    <label class="form-label fw-bold">Ảnh cửa hàng</label>
                                    <div>
                                        <img src="@Model.UrlAnhHienTai" alt="Ảnh cửa hàng" class="img-thumbnail mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                                    </div>
                                    <input type="file" class="form-control" id="UrlAnhMoi" name="UrlAnhMoi" />
                                    <span asp-validation-for="UrlAnhMoi" class="text-danger"></span>
                                </div>

                                <!-- Cột bên phải: Các trường thông tin -->
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <label for="IdCuaHang" class="form-label fw-bold">ID cửa hàng</label>
                                        <input type="text" class="form-control" id="IdCuaHang" name="IdCuaHang" value="@Model.IdCuaHang" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                                    </div>
                                    <div class="mb-3">
                                        <label for="TenCuaHang" class="form-label fw-bold">Tên cửa hàng</label>
                                        <input type="text" class="form-control" id="TenCuaHang" name="TenCuaHang" value="@Model.TenCuaHang" placeholder="Nhập tên cửa hàng" />
                                        <span asp-validation-for="TenCuaHang" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="IdSeller" class="form-label fw-bold">ID chủ sở hữu</label>
                                        <input type="text" class="form-control" id="IdSeller" name="IdSeller" value="@Model.IdSeller" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                                    </div>
                                    <div class="mb-3">
                                        <label for="Sdt" class="form-label fw-bold">Số điện thoại</label>
                                        <input type="text" class="form-control" id="Sdt" name="Sdt" value="@Model.Sdt" placeholder="Nhập số điện thoại" />
                                        <span asp-validation-for="Sdt" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="DiaChi" class="form-label fw-bold">Địa chỉ</label>
                                        <input type="text" class="form-control" id="DiaChi" name="DiaChi" value="@Model.DiaChi" placeholder="Nhập địa chỉ" />
                                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="MoTa" class="form-label fw-bold">Mô tả</label>
                                        <textarea class="form-control" id="MoTa" name="MoTa" placeholder="Nhập mô tả cửa hàng">@Model.MoTa</textarea>
                                        <span asp-validation-for="MoTa" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Nút hành động -->
                            <div class="text-end">
                                <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
                                <a asp-area="Admin" asp-controller="Shop" asp-action="Index" class="btn btn-secondary">Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">