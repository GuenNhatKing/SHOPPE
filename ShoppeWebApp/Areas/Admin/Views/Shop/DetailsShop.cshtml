@model ShoppeWebApp.ViewModels.Admin.ShopViewModel
<head>
    <title>Chi tiết cửa hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container-fluid">
        <!-- Thanh ngang trên cùng -->
        <div class="row bg-dark text-white py-2 align-items-center">
            <div class="col-md-10">
                <h4 class="ms-3">Xin chào Quản trị viên</h4>
            </div>
            <div class="col-md-2 text-end">
                <form asp-area="" asp-controller="Home" asp-action="DangXuat" method="post">
                    <button type="submit" class="btn btn-danger btn-sm me-3">Đăng xuất</button>
                </form>
            </div>
        </div>
        <hr class="my-0 border-light">

        <!-- Bố cục chia 2 cột: Sidebar + Nội dung -->
        <div class="row">
            <!-- Thanh chức năng bên trái -->
            <div class="col-md-2 bg-dark text-white vh-100">
                <h5 class="mt-3 ms-3">Chức năng</h5>
                <div class="d-flex flex-column align-items-start mt-4 px-3">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-home"></i> Home
                    </a>
                    <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-users"></i> Quản lý người dùng
                    </a>
                    <a asp-area="Admin" asp-controller="Shop" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-store"></i> Quản lý cửa hàng
                    </a>
                    <a asp-area="Admin" asp-controller="Invoice" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-file-invoice"></i> Quản lý hóa đơn
                    </a>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Statistics" class="btn btn-outline-light w-100 mb-3 text-start">
                        <i class="fas fa-chart-bar"></i> Thống kê doanh thu
                    </a>
                </div>
            </div>

            <!-- Nội dung chính -->
            <div class="col-md-10">
                <div class="container mt-5">
                    <div class="card shadow-sm border-0 rounded-3">
                        <!-- Tiêu đề -->
                        <div class="text-center mb-4">
                            <h2 class="fw-bold text-white p-3" style="background-color: #28a745; border-radius: 10px;">
                                Chi tiết cửa hàng
                            </h2>
                        </div>

                        <!-- Tên cửa hàng nổi bật và nút chỉnh sửa -->
                        <div class="d-flex align-items-center justify-content-between mt-4 px-4">
                            <h2 class="fw-bold text-warning text-center flex-grow-1 display-5">@Model.TenCuaHang</h2>
                            <a asp-area="Admin" asp-controller="Shop" asp-action="Edit" asp-route-id="@Model.IdCuaHang" 
                               class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Chỉnh sửa
                            </a>
                        </div>

                        <!-- Nội dung chi tiết -->
                        <div class="card-body">
                            <div class="row">
                                <!-- Hình ảnh cửa hàng -->
                                <div class="col-md-4 text-center">
                                    <img src="@Url.Content(Model.UrlAnh)" alt="Ảnh đại diện cửa hàng" 
                                         class="img-fluid rounded" style="max-height: 200px; object-fit: cover;" />
                                </div>
                                <!-- Thông tin cửa hàng -->
                                <div class="col-md-8">
                                    <table class="table table-borderless">
                                        <tbody>
                                            <tr>
                                                <th class="text-end" style="width: 40%;">ID Cửa hàng:</th>
                                                <td>@Model.IdCuaHang</td>
                                            </tr>
                                            <tr>
                                                <th class="text-end">ID Chủ sở hữu:</th>
                                                <td>@Model.IdSeller</td>
                                            </tr>
                                            <tr>
                                                <th class="text-end">Tên Chủ sở hữu:</th>
                                                <td>@Model.TenSeller</td>
                                            </tr>
                                            <tr>
                                                <th class="text-end">Số điện thoại:</th>
                                                <td>@Model.Sdt</td>
                                            </tr>
                                            <tr>
                                                <th class="text-end">Địa chỉ:</th>
                                                <td>@Model.DiaChi</td>
                                            </tr>
                                            <tr>
                                                <th class="text-end">Mô tả:</th>
                                                <td>@Model.MoTa</td>
                                            </tr>
                                            <tr>
                                                <th class="text-end">Ngày tạo:</th>
                                                <td>@Model.ThoiGianTao.ToString("dd/MM/yyyy")</td>
                                            </tr>
                                            <tr>
                                                <th class="text-end">Số sản phẩm:</th>
                                                <td>@Model.SoSanPham</td>
                                            </tr>
                                            <tr>
                                                <th class="text-end">Số đơn hàng:</th>
                                                <td>@Model.SoDonHang</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Footer với các nút điều hướng -->
                        <div class="card-footer text-center">
                            <a asp-area="Admin" asp-controller="Shop" asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <a asp-area="Admin" asp-controller="Shop" asp-action="ProductList" asp-route-id="@Model.IdCuaHang" 
                               class="btn btn-primary">
                                <i class="fas fa-box"></i> Xem chi tiết sản phẩm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">