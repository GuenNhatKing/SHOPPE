@model ShoppeWebApp.Models.NguoiDung

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        background-color: #f5f6f7;
    }

    .form-wrapper {
        width: 100%;
        max-width: 500px;
        background-color: #fff;
        margin: 60px: auto;
        border-radius: 12px;
        padding: 40px 30px;

        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        font-family: "Segoe UI", sans-serif;
    }

    .form-title {
        font-size: 28px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        font-size: 16px;
    }

    .form-control {
        font-size: 16px;
        padding: 10px;
        width: 100%;
        margin-bottom: 8px;
        box-sizing: border-box;
    }

     .btn-custom, .btn-outline {
        font-size: 16px;
        font-weight: bold;
        height: 45px;
        width: 100%;
        border-radius: 6px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        cursor: pointer;
    }

    .btn-custom {
        background-color: #333;
        color: white;
        border: 2px solid #333;
    }

    .btn-outline {
        background-color: white;
        color: #333;
        border: 2px solid #333;
        text-decoration: none;
    }

    .btn-outline:hover {
        background-color: #333;
        color: white;
    }


    .policy-text {
        font-size: 14px;
        color: #444;
        margin-top: 20px;
        text-align: center;
    }

    .policy-text a {
        color: black;
        text-decoration: underline;
    }

    .form-footer {
        text-align: center;
        margin-top: 25px;
    }

    .button-group {
        display: flex;
        gap: 12px;
        margin-top: 20px;
    }
</style>

<div class="d-flex justify-content-center">
    <div class="form-wrapper ">
        <div class="form-title">Đăng ký tài khoản cá nhân</div>
        <form asp-action="Register" method="post">
            <div>
                <label asp-for="HoVaTen" class="form-label">Tên chủ tài khoản *</label>
                <input asp-for="HoVaTen" class="form-control" />
                <span asp-validation-for="HoVaTen" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Email" class="form-label">Email *</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Sdt" class="form-label">Số điện thoại *</label>
                <input asp-for="Sdt" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>

            <div>
                <label class="form-label">Mật khẩu *</label>
                <input name="MatKhau" type="password" class="form-control" required />
            </div>

            <div>
                <label class="form-label">Nhập lại mật khẩu *</label>
                <input name="XacNhanMatKhau" type="password" class="form-control" required />
            </div>

            <div class="policy-text">
                Khi nhấn nút <strong>ĐĂNG KÝ</strong> là bạn đã đồng ý và cam kết tuân thủ<br />
                <a href="#">Thỏa thuận người dùng</a> của chúng tôi.
            </div>

            <div class="button-group">
                <a href="/Login" class="btn btn-outline">Quay lại</a>
                <button type="submit" class="btn btn-custom">Đăng ký</button>
            </div>
        </form>

        <div class="form-footer">
            <p class="mt-4 mb-0">Bạn đã có tài khoản? <a href="/Login" class="fw-bold text-primary">Đăng nhập</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
